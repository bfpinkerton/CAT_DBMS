<%- include ("../../partials/head") %>

<body>
    <!-- Sidebar -->
    <%- include ("../../partials/sidebar") %>
      

    <!-- All additional page content -->
    <div class="pusher" style="background-color:lightslategray">
        <!-- Top Fixed Menu  -->
        <div class="row">
            <div class="top fixed ui inverted menu" style="background: #134524; float: left;margin-top: 0px;">
                <a class="item" id="left-sidebar-toggle">
                    <i class="sidebar large icon"></i>
                </a>
                <div class="right menu">
                    <a class="item" href="/mal/create">
                        <button class="ui blue labeled icon button" style="background-color: darkgreen;">
                            <i class="plus square outline large icon"></i>
                            New Entry
                        </button>
                    </a>
                    <a class="item">
                        <div class="ui category fluid search">
                            <div class="ui icon input" style="width: 550px; min-width: 300px">
                            <input class="prompt" type="text" placeholder="Search entries...">
                            <i class="search icon"></i>
                            </div>
                            <div class="results"></div>
                        </div>
                    </a>
                    <%- include ("../../partials/topmenuExtra") %>
                </div>
            </div>
        </div>



        <!-- ------------------------------------------------------------------------------------------ -->
        <!-- Remaining page elements -->
        <!-- ------------------------------------------------------------------------------------------ -->
        <div class="ui one column grid container" style="margin-top: 25px;"></div>
            <h1></h1>
            <div class="16 wide column" style="padding: 10px;"> 
                <div class="ui segment" style="max-height: 80vh;padding: 5px;overflow: hidden;">
                    <h1 class="ui block header"><b>Create New Entry:</b></h1>
                    <!-- Flash Messages -->
                    <%- include ("../../partials/flash") %>
                    <!-- New Entry Form -->
                    <form class="ui small form" id="createFormMAL" action="/mal/create" method="POST" style="margin-top: 0px;margin-bottom: 0px;margin-left: 0px ;padding: 0px;">
                        <!-- Primary Association Info -->
                        <style>
                            .ui.form .field.disabled :disabled {
                                opacity: .999999;
                            }
                            .ui.dropdown {
                                /* min-height: auto !important;
                                height: 50px !important; */
                                border: 1px solid black !important;
                            }
                            .ui.input.field input {
                                display: block;
                            }
                        </style>
                        <div class="ui 2 column grid">
                            <!-- Information -->
                            <div class="eleven wide column">
                                <!-- Metadata and edit information -->
                                <div class="row">
                                    <h2>
                                        Metadata & Edit Information
                                    </h2>
                                    <div class="four fields">
                                        <div class="ui input field">
                                            <label>Origination Date:</label>
                                            <input disabled type="string" placeholder="<%=date%>" >
                                        </div>
                                        <div class="ui input field">
                                            <label>Originator:</label>
                                            <input disabled type="string" placeholder="<%=user.fName %> <%=user.lName %>">
                                        </div>
                                        <div class="ui input field">
                                            <label>Date Updated:</label>
                                            <input disabled type="string" placeholder="AUTOGENERATED">
                                        </div>
                                        <div class="ui input field">
                                            <label>Updated by:</label>
                                            <input disabled type="string" placeholder="AUTOGENERATED">
                                        </div>
                                    </div>
                                </div>
                                <div class="ui inverted divider" style="margin-top: -5px;margin-bottom: 0px"></div>
                                <!-- Primary Association Information (1) -->
                                <div class="row">
                                    <h2>
                                       Primary Association Information
                                    </h2>
                                    <div class="four ui input fields">
                                        <div class="ui input field">
                                            <label>Legal Association Name:</label>
                                            <input type="string" placeholder="Enter Legal Assc Name">
                                        </div>
                                        <div class="ui input field">
                                            <label>Also Known As:</label>
                                            <input type="string" placeholder="Enter Alt Name">
                                        </div>
                                        <div class="ui input field">
                                            <label>Client Account Number:</label>
                                            <input type="string" placeholder="Enter Client Acct #">
                                        </div>
                                        <div class="ui input field">
                                            <label>File Name:</label>
                                            <input type="string" placeholder="Enter File Name">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Entryway Photo/Landmark Photo -->
                            <div class="five wide column">
                                <style>
                                    .border-1 {
                                        border: 2px solid black;
                                        padding-left: 5px;
                                    }
                                    .inputfile {
                                        width: 80px;
                                        height: 80px;
                                        opacity: 0;
                                        overflow: hidden;
                                        position: absolute;
                                        z-index: -1;
                                    }
                                </style>
                                <div class="border-1" style="margin-top: 15px;height:20vh;padding: 10px; text-align: center;overflow: auto;">
                                    <h3>
                                        Photo of Association Entryway or other notable landmark
                                    </h3>
                                </div>
                                <input type="file" (change)="fileEvent($event)" class="inputfile" id="embedpollfileinput" />
                                    <label for="embedpollfileinput" class="ui small right floated button" style="text-align: center;">
                                        <i class="ui upload icon"></i> 
                                        Upload Entryway/Landmark Photo
                                    </label>
                                <input type="file" (change)="fileEvent($event)" class="inputfile" id="embedpollfileinput" />
                            </div>
                        </div>
                        <!-- Primary Association Information (2) -->
                        <div class="ui 1 column grid">
                            <div class="sixteen wide column">
                                <div class="row">
                                    <div class="three fields">
                                        <div class="field">
                                            <label>Status w/in Firm:</label>
                                            <div class="ui selection dropdown dropdownBorder">
                                                <input type="hidden">
                                                <i class="dropdown icon"></i>
                                                <div class="default text">Choose from below:</div>
                                                <div class="menu">
                                                    <div class="item" data-value="1">Option 1</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="field">
                                            <label>Special Classification:</label>
                                            <div class="ui selection dropdown">
                                                <input type="hidden" name="gender">
                                                <i class="dropdown icon"></i>
                                                <div class="default text">Choose from below:</div>
                                                <div class="menu">
                                                    <div class="item" data-value="1">Option 1</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="field">
                                            <label>Association Type:</label>
                                            <div class="ui selection dropdown">
                                                <input type="hidden" name="gender">
                                                <i class="dropdown icon"></i>
                                                <div class="default text">Choose from below:</div>
                                                <div class="menu">
                                                    <div class="item" data-value="1">Option 1</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="four fields">
                                        <div class="field" style="width: 37vw">
                                            <label>Secondary MHP Association Type:</label>
                                            <div class="ui selection dropdown">
                                                <input type="hidden" name="gender">
                                                <i class="dropdown icon"></i>
                                                <div class="default text">Choose from below:</div>
                                                <div class="menu">
                                                    <div class="item" data-value="1">Option 1</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="field">
                                            <label>Domicile County:</label>
                                            <div class="ui selection dropdown">
                                                <input type="hidden" name="gender">
                                                <i class="dropdown icon"></i>
                                                <div class="default text">Choose from below:</div>
                                                <div class="menu">
                                                    <div class="item" data-value="1">Option 1</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="field">
                                            <label>Domicile City:</label>
                                            <div class="ui selection dropdown">
                                                <input type="hidden" name="gender">
                                                <i class="dropdown icon"></i>
                                                <div class="default text">Choose from below:</div>
                                                <div class="menu">
                                                    <div class="item" data-value="1">Option 1</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="field">
                                            <label>Domicile Zip Code:</label>
                                            <input type="string" placeholder="Enter Zip Code">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="ui inverted divider" style="margin-top: 10px;margin-bottom: 10px"></div>
                        <!-- General Board Member Related Information -->
                        <h2 style="margin-bottom: 10px;">
                            General Board Member Related Information
                        </h2>
                        
                        <div class="ui 2 column grid">
                            <div class="eight wide column">
                                <div class="row">
                                    <label>Corporate Status:</label>
                                    <div class="ui selection dropdown">
                                        <input type="hidden" name="gender">
                                        <i class="dropdown icon"></i>
                                        <div class="default text">Choose from below:</div>
                                        <div class="menu">
                                            <div class="item" data-value="1">Option 1</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>



                        <div class="ui inverted divider" style="margin-top: -5px;margin-bottom: -20px"></div>
                        <!-- Bottom Buttons -->
                        <div class="ui column grid" style="padding: 15px;margin-bottom: -25px;">
                            <style>
                                .ui.color1.button:not(:hover) {
                                    background-color: #134524;
                                    color: #fff;
                                }
                                .ui.color1.button:hover {
                                    background-color: darkgray;
                                    color: #fff;
                                }
                            </style>
                            <style>
                                .ui.color2.button:not(:hover) {
                                    background-color: darkred;
                                    color: #fff;
                                }
                                .ui.color2.button:hover {
                                    background-color: darkgray;
                                    color: #fff;
                                }
                            </style>
                            <div class="row">
                                <button class="ui red deny icon button" type="reset"> 
                                    Reset ALL Fields 
                                </button>
                                <button class="ui green button" type="submit">
                                    Create New Entry
                                </button>
                            </div>
                          </div>
                    </form>
                </div>
            </div>
            
        </div>
    </div>

    <!-- Sidebar toggle script -->
    <script>
        $('.ui.left.sidebar')
            .sidebar('attach events', '#left-sidebar-toggle')
        ;
    </script>
</body>


