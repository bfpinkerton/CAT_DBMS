                            <div class="ui inverted divider" style="margin-top: 20px;margin-bottom: 10px"></div>

                            <div class="ui center aligned two column grid">
                                <style>
                                    .ui.color1.button:not(:hover) {
                                        background-color: #134524;
                                        color: #fff;
                                    }
                                    .ui.color1.button:hover {
                                        background-color: darkgray;
                                        color: #fff;
                                    }
                                </style>
                                <style>
                                    .ui.color2.button:not(:hover) {
                                        background-color: darkred;
                                        color: #fff;
                                    }
                                    .ui.color2.button:hover {
                                        background-color: darkgray;
                                        color: #fff;
                                    }
                                </style>
                                <div class="row">
                                  <div class="column">
                                    <button class="ui centered color1 button" type="submit">
                                        Save Changes
                                    </button>
                                  </div>
                                  <div class="column">
                                    <button class="ui centered color2 deny centered icon button" type="reset"> 
                                        Reset Fields 
                                    </button>
                                  </div>
                                </div>
                              </div>


                            <div class="ui inverted divider" style="margin-top: 10px;margin-bottom: 0px"></div>
                        </form> 
                    </div>
                </div>
            </div>
        </div>
    </div>
