<div class="ui small modal">
    <i class="close icon"></i>
    <div class="header">
        Edit Patient
    </div>
    <div class="content">
        <form class="ui form" action="/patients/<%=patient._id%>?_method=PUT" name="_name" method="POST">
            <h3>Personal Information</h3>
            <div class="field">
                <label>Name</label>
                <div class="two fields">
                    <div class="field">
                        <input type="text" name="first_name" value="<%= patient.first_name%>">
                    </div>
                    <div class="field">
                        <input type="text" name="last_name" value="<%= patient.last_name%>">
                    </div>
                </div>
            </div>
            <div class="three fields">
                <div class="field">
                    <label>UID</label>
                    <input type="number" name="UID" value="<%=patient.UID%>">
                </div>
                <div class="field">
                    <label>Gender</label>
                    <select name="gender" class="ui dropdown" id="dropdown-gender" data-gender="<%=patient.gender%>">
                        <option value=""></option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
                <div class="field">
                    <label>Date of Birth</label>
                    <input type="date" name="birthday" value="2018-07-22">
                </div>
            </div>
            <div class="three fields">
                <div class="field">
                    <label>Weight (Lbs.)</label>
                    <input type="number" name="weight" value="<%= patient.weight%>">
                </div>
                <div class="field">
                    <label>Height (In.)</label>
                    <input type="number" name="height" value="<%= patient.height%>">
                </div>
                <div class="field">
                    <label>Blood Type</label>
                    <select name="blood_type" class="ui dropdown" id="dropdown-bloodType" data-blood="<%=patient.blood_type%>">
                        <option value=""></option>
                        <option value="AB-">AB-</option>
                        <option value="AB+">AB+</option>
                        <option value="A+">A+</option>
                        <option value="A-">A-</option>
                        <option value="B+">B+</option>
                        <option value="B-">B-</option>
                        <option value="O+">O+</option>
                        <option value="O-">O-</option>
                    </select>
                </div>
            </div>
            <div class="field">
                <label>Home Address</label>
                <input type="text" name="home_address" value="<%= patient.home_address%>">
            </div>
            <div class="field">
                <label>Primary Care Physician</label>
                <input type="text" name="physician" value="<%= patient.physician%>">
            </div>

            <h3>
                Emergency Contact Information
            </h3>
            <div class="field">
                <label>Full Name</label>
                <input type="text" name="emergency[full_name]" value="<%= patient.emergency['full_name']%>">
            </div>
            <div class="field">
                <label>Email Address</label>
                <input type="text" name="emergency[email]" value="<%= patient.emergency['email']%>">
            </div>
            <div class="field">
                <label>Phone Number</label>
                <input type="text" name="emergency[phone_number]" value="<%= patient.emergency['phone_number']%>">
            </div>
            <div class="field">
                <label>Home Address</label>
                <input type="text" name="emergency[home_address]" value="<%= patient.emergency['home_address']%>">
            </div>
            <div class="field">
                <label>Relationship To Patient</label>
                <input type="text" name="emergency[relationship]" value="<%= patient.emergency['relationship']%>">
            </div>
            <button class="ui positive centered icon button" type="submit">Save Changes</button>
            <button class="ui red deny centered icon button" type="reset"> Reset Fields </button>
        </form>
    </div>
</div>